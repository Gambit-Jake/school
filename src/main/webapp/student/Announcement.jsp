<script type="text/javascript">
    $(function () {
        function addAnnouncement(Id, announcement) {//向某一div添加数据
            var title;
            $('#' + Id + ' h3').html("Department " + announcement.department_id)
            title = announcement.ann_title
            if(title.length > 25)
                title = title.substring(0,25) + "...."
            if(title.length < 10)
                title = title + "<br><br>"
            $('#' + Id + ' .ann_title').html('<h1>' + title + '</h1>')
            $('#' + Id + ' p').html(announcement.ann_content.substring(0, 50) + ".....")
            $('#' + Id + ' .btn').attr("href", "${pageContext.request.contextPath}/student/toOneAnnouncement?ann_id="+announcement.ann_id);
        }

        function addAnnouncements(data) {//添加数据到六个div中
            var life = 0;
            var study = 0;
            var mypricing;
            $.each(data, function (index, announcement) {
                if ((life > 3) && (study > 3))
                    return false;
                if (announcement.ann_type == 1) {
                    life = life + 1;
                    mypricing = "pricing-item-life" + life
                    addAnnouncement(mypricing, announcement)
                } else {
                    study = study + 1;
                    mypricing = "pricing-item-study" + study
                    addAnnouncement(mypricing, announcement)
                }
            })
        }

        $.ajax({
            type: 'GET',
            url: '${pageContext.request.contextPath}/student/toAnnouncement',
            success: function (data) {
                addAnnouncements(data);
            }
        });
    });
</script>

